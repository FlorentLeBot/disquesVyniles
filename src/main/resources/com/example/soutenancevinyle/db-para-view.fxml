<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.soutenancevinyle.DBController">
   <children>
      <AnchorPane prefHeight="630.0" prefWidth="800.0">
         <children>
            <Text layoutX="28.0" layoutY="36.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Paramètres de la base de données" underline="true" />

             <Label layoutX="181.0" layoutY="113.0" text="Non du serveur" />
            <TextField fx:id="serverName" layoutX="278.0" layoutY="109.0" prefHeight="25.0" prefWidth="197.0" />

            <Label layoutX="181.0" layoutY="160.0" text="Nom de la BDD" />
            <TextField fx:id="dbName" layoutX="278.0" layoutY="156.0" prefHeight="25.0" prefWidth="197.0" />

            <Label layoutX="179.0" layoutY="259.0" text="Login Utilisateur" />
            <TextField fx:id="login" layoutX="297.0" layoutY="255.0" prefHeight="25.0" prefWidth="175.0" />

            <Label layoutX="181.0" layoutY="208.0" text="Numéro de Port de la BDD" />
            <TextField fx:id="dbPort" layoutX="345.0" layoutY="204.0" prefHeight="25.0" prefWidth="127.0" />

            <Label layoutX="179.0" layoutY="305.0" text="Password Utilisateur" />
            <TextField fx:id="password" layoutX="297.0" layoutY="301.0" prefHeight="25.0" prefWidth="175.0" />

            <Button fx:id="valid" layoutX="238.0" layoutY="381.0" mnemonicParsing="false" onAction="#onClickValid" text="Valider" />

            <Button fx:id="closePara" layoutX="335.0" layoutY="381.0" mnemonicParsing="false" onAction="#onClickClosePara" text="Fermer" />

         </children>
      </AnchorPane>
   </children>
</VBox>
